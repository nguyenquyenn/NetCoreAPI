@model InvoiceCalculator.Models.InvoiceModel

@{
    ViewData["Title"] = "Tính tiền hóa đơn";
}

<h2>Tính tiền hóa đơn</h2>

<form method="post">
    <div>
        <label>Số lượng:</label>
        <input type="number" asp-for="Quantity" class="form-control" />
        <span asp-validation-for="Quantity" class="text-danger"></span>
    </div>

    <div>
        <label>Đơn giá:</label>
        <input type="number" asp-for="UnitPrice" class="form-control" step="0.01" />
        <span asp-validation-for="UnitPrice" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary mt-3">Tính tiền</button>
</form>

@if (ViewBag.Result != null)
{
    <div class="alert alert-info mt-3">@ViewBag.Result</div>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
